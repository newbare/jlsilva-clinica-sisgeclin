<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit name="CLINICA" transaction-type="JTA">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/CLINICADatasource</jta-data-source>
      <class>br.com.clinica.entity.Animal</class>
      <class>br.com.clinica.entity.Clientes</class>
      <class>br.com.clinica.entity.Clientestel</class>
      <class>br.com.clinica.entity.Especies</class>
      <class>br.com.clinica.entity.Exbiosanguinea</class>
      <class>br.com.clinica.entity.Exfezes</class>
      <class>br.com.clinica.entity.Exhemograma</class>
      <class>br.com.clinica.entity.Exurinalise</class>
      <class>br.com.clinica.entity.Ficha</class>
      <class>br.com.clinica.entity.Internacao</class>
      <class>br.com.clinica.entity.InternacaoMedicamento</class>
      <class>br.com.clinica.entity.Pelagem</class>
      <class>br.com.clinica.entity.Raca</class>
      <class>br.com.clinica.entity.Tiporetornovacinacao</class>
      <class>br.com.clinica.entity.Vacina</class>
      <class>br.com.clinica.entity.Vacinacao</class>         
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="update"/>
         <property name="hibernate.show_sql" value="true"/>
         <property name="hibernate.format_sql" value="true"/>
         <!-- Only relevant if Seam is loading the persistence unit (Java SE bootstrap) -->
         <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup"/>
      </properties>
   </persistence-unit>
    
</persistence>
